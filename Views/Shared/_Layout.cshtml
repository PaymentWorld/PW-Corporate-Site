                <div class="header-links-rt float-rt">
                    <div class="header-links-url float-rt"><a href="@System.Configuration.ConfigurationManager.AppSettings.Get("VirtualTerminalUrl")" class="one" title="Virtual Terminal" target="_blank">VIRTUAL TERMINAL</a></div>
                    <div class="header-links-sep float-rt"></div>
                    <div class="header-links-url float-rt"><a href="@System.Configuration.ConfigurationManager.AppSettings.Get("OnlineResourceCenterUrl")" class="one" title="Online Resource Center" target="_blank">ONLINE RESOURCE CENTER</a></div>                    
