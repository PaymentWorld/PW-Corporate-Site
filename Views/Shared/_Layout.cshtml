                {
                    // day
                    @Html.ActionLinkImage("index", "products-services", "images/img_header.jpg", "PaymentWorld", null)
                }   
                else
                {
                    //night
                    @Html.ActionLinkImage("index", "products-services", "images/img_header_2.jpg", "PaymentWorld", null)
                }             
            </div> 
